{% doc %}
  @prompt
    Create a responsive hero section with a large background image, centered white text overlay with a main heading, subheading, and call-to-action button. The section should have a dark overlay on the background image for better text readability, and the button should be prominently styled. Make it fully responsive across all device sizes with proper text scaling and spacing adjustments for mobile devices., give me and other to button color and on hover as well and also heading and subheading color. Make the image fit properly into the image container

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.section_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 1;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 4;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: center;
    max-width: {{ block.settings.content_max_width }}px;
    padding: 0 20px;
    width: 100%;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px 0;
    color: {{ block.settings.heading_color }};
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: 400;
    line-height: 1.4;
    margin: 0 0 {{ block.settings.spacing_between_elements | times: 1.5 }}px 0;
    color: {{ block.settings.subheading_color }};
    opacity: 0.9;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    text-decoration: none;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: {{ block.settings.button_text_transform }};
    letter-spacing: 0.5px;
    min-width: 140px;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_background_color }};
    color: {{ block.settings.button_primary_text_color }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_hover_background_color }};
    color: {{ block.settings.button_primary_hover_text_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_background_color }};
    color: {{ block.settings.button_secondary_text_color }};
    border: 2px solid {{ block.settings.button_secondary_text_color }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_hover_background_color }};
    color: {{ block.settings.button_secondary_hover_text_color }};
    border-color: {{ block.settings.button_secondary_hover_text_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  @media screen and (max-width: 768px) {
    .ai-hero-section-{{ ai_gen_id }} {
      height: {{ block.settings.section_height_mobile }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
      margin-bottom: {{ block.settings.spacing_between_elements | times: 0.8 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.85 }}px;
      margin-bottom: {{ block.settings.spacing_between_elements | times: 1.2 }}px;
    }

    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
      gap: 12px;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical | times: 0.9 }}px {{ block.settings.button_padding_horizontal | times: 0.9 }}px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      width: 100%;
      max-width: 280px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.75 }}px;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
      font-size: {{ block.settings.button_font_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.background_image %}
    <img
      src="{{ block.settings.background_image | image_url: width: 2000 }}"
      alt="{{ block.settings.background_image.alt | escape }}"
      class="ai-hero-background-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.background_image.width }}"
      height="{{ block.settings.background_image.height }}"
    >
  {% else %}
    <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-hero-empty-state-{{ ai_gen_id }}">
        Add a background image to complete your hero section
      </div>
    </div>
  {% endif %}

  <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
    {% endif %}

    {% if block.settings.button_primary_text != blank or block.settings.button_secondary_text != blank %}
      <div class="ai-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.button_primary_text != blank %}
          <a
            href="{{ block.settings.button_primary_link | default: '#' }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}"
            {% if block.settings.button_primary_link == blank %}aria-disabled="true"{% endif %}
          >
            {{ block.settings.button_primary_text }}
          </a>
        {% endif %}

        {% if block.settings.button_secondary_text != blank %}
          <a
            href="{{ block.settings.button_secondary_link | default: '#' }}"
            class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}"
            {% if block.settings.button_secondary_link == blank %}aria-disabled="true"{% endif %}
          >
            {{ block.settings.button_secondary_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

