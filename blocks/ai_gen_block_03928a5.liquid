{% doc %}
  @prompt
    Create a "Latest Products" section that displays three product collections in a horizontal layout. The section should have a centered heading "Latest Products" with subtitle text "Explore our top-rated, customer-favorite products that everyone's loving!" Below this, display three collection cards in a row: "Baby Girl Collections" with a teal/turquoise background showing a young girl in white vest and dark dress, "Winter Collections" with a pink background showing a child in patterned sweater and denim skirt, and "Summer Collection" with a beige background showing a girl in denim jacket and white top. Each card should have rounded corners, the collection name in white text at the bottom left, and a white circular arrow button in the bottom right. The cards should be equal width and have proper spacing between them., I want the "Custom title" and the "arrow" be on the same level. It's looking like thus "Custom title" is kinda down and not same level with the arrow, On hover i want to flip the color, "Arrow color" to white and "Arrow background" to black

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-latest-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.section_background_color }};
  }

  .ai-latest-products-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
  }

  .ai-latest-products-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-latest-products-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 600;
  }

  .ai-latest-products-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-latest-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.card_spacing }}px;
  }

  .ai-latest-products-card-{{ ai_gen_id }} {
    position: relative;
    height: {{ block.settings.card_height }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    text-decoration: none;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-latest-products-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-latest-products-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;position: absolute;
    top: 0;
    left: 0;
  }

  .ai-latest-products-card-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }

  .ai-latest-products-card-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 2;
  }

  .ai-latest-products-card-title-{{ ai_gen_id }} {
    color: {{ block.settings.card_text_color }};
    font-size: {{ block.settings.card_title_size }}px;
    font-weight: 600;
    margin: 0;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    line-height: 1.2;
  }

  .ai-latest-products-card-arrow-{{ ai_gen_id }} {
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    background-color: {{ block.settings.arrow_background_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, background-color 0.3s ease;
    flex-shrink: 0;
  }

  .ai-latest-products-card-{{ ai_gen_id }}:hover .ai-latest-products-card-arrow-{{ ai_gen_id }} {
    transform: scale(1.1);
    background-color: {{ block.settings.arrow_color }};
  }

  .ai-latest-products-card-arrow-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.arrow_size }}px * 0.5);
    height: calc({{ block.settings.arrow_size }}px * 0.5);
    color: {{ block.settings.arrow_color }};
    transition: color 0.3s ease;
  }

  .ai-latest-products-card-{{ ai_gen_id }}:hover .ai-latest-products-card-arrow-{{ ai_gen_id }} svg {
    color: {{ block.settings.arrow_background_color }};
  }

  .ai-latest-products-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .ai-latest-products-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-latest-products-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 990px) {
    .ai-latest-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-latest-products-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.card_spacing | times: 0.8 }}px;
    }

    .ai-latest-products-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-latest-products-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-latest-products-card-{{ ai_gen_id }} {
      height: {{ block.settings.card_height | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-latest-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-latest-products-container-{{ ai_gen_id }}">
    <div class="ai-latest-products-header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-latest-products-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-latest-products-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="ai-latest-products-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign collection_title_key = 'collection_' | append: i | append: '_title'
          assign collection_image_key = 'collection_' | append: i | append: '_image'
          
          assign collection = block.settings[collection_key]
          assign collection_title = block.settings[collection_title_key]
          assign collection_image = block.settings[collection_image_key]
        %}

        {% if collection != blank %}
          <a href="{{ collection.url }}" class="ai-latest-products-card-{{ ai_gen_id }}">
        {% else %}
          <div class="ai-latest-products-card-{{ ai_gen_id }}">
        {% endif %}
          
          {% if collection_image != blank %}
            <img
              src="{{ collection_image | image_url: width: 600}}"
              alt="{{ collection_image.alt | escape }}"
              class="ai-latest-products-card-image-{{ ai_gen_id }}"
              loading="lazy"
              width="600"
              height="{{ block.settings.card_height }}"
            >
          {% elsif collection != blank and collection.featured_image != blank %}
            <img
              src="{{ collection.featured_image | image_url: width: 600 }}"
              alt="{{ collection.featured_image.alt | escape }}"
              class="ai-latest-products-card-image-{{ ai_gen_id }}"
              loading="lazy"
              width="600"
              height="{{ block.settings.card_height }}"
            >
          {% else %}
            <div class="ai-latest-products-placeholder-{{ ai_gen_id }}">
              {{ 'collection-apparel-1' | placeholder_svg_tag }}<div class="ai-latest-products-empty-state-{{ ai_gen_id }}">
                Add collection image
              </div>
            </div>
          {% endif %}

          <div class="ai-latest-products-card-overlay-{{ ai_gen_id }}"></div><div class="ai-latest-products-card-content-{{ ai_gen_id }}">
            <h3 class="ai-latest-products-card-title-{{ ai_gen_id }}">
              {% if collection_title != blank %}
                {{ collection_title }}
              {% elsif collection != blank %}
                {{ collection.title }}
              {% else %}
                Collection {{ i }}
              {% endif %}
            </h3>
            <div class="ai-latest-products-card-arrow-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </div>

        {% if collection != blank %}
          </a>
        {% else %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

